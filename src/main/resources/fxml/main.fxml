<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.piotrwalkusz.taskmanager.controller.MainController" style="-fx-padding: 15;" prefWidth="450">

    <!-- Current Task Section -->
    <VBox spacing="5.0" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 12;">
        <Label fx:id="currentTaskLabel" text="No tasks in queue" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
        <Label fx:id="timeLabel" text="" style="-fx-font-size: 13px; -fx-text-fill: #666666;"/>
        <Label fx:id="queueSizeLabel" text="Tasks: 0" style="-fx-font-size: 13px; -fx-text-fill: #666666;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="8.0" alignment="CENTER_LEFT">
        <Button fx:id="startPauseButton" text="▶" onAction="#handleStartPause" prefWidth="50" prefHeight="40" style="-fx-font-size: 18px;"/>
        <Button fx:id="nextTaskButton" text="⤵" onAction="#handleNextTask" prefWidth="50" prefHeight="40" style="-fx-font-size: 20px;"/>
        <Button fx:id="deleteTaskButton" text="✓" onAction="#handleDeleteTask" prefWidth="50" prefHeight="40" style="-fx-font-size: 20px;"/>
        <Button fx:id="undoButton" text="↩" onAction="#handleUndo" prefWidth="50" prefHeight="40" style="-fx-font-size: 20px;" visible="false" managed="false"/>
    </HBox>

    <!-- New Task Section -->
    <HBox spacing="8.0" alignment="CENTER_LEFT">
        <TextField fx:id="newTaskTextField" promptText="New task..." prefHeight="40" style="-fx-font-size: 14px;" HBox.hgrow="ALWAYS"/>
        <Button fx:id="addTaskButton" text="+" onAction="#handleAddTask" prefWidth="50" prefHeight="40" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
